<MyButton@Button>:
  background_color: (1, 1, 0, 1)
  color: (0, 0, 0, 1)
  size: (120, 60)
  size_hint: (None, None)

<MyFooter@Label>:
  color: (1, 0, 0, 1)
  height: 30
  size_hint_y: None
<PittodoMain>:


  BoxLayout:
    orientation: 'vertical'
    size: root.size

    StackLayout:
      id: topMenu
      orientation: 'lr-tb'
      MyButton:
        text: "File"
      MyButton:
        text: "Edit"
      MyButton:
        text: "View"
    BoxLayout:
      id: mainContent
      orientation: 'horizontal'

      StackLayout:
        id: sideBarMenu
        orientation: 'tb-lr'

        MyButton:
          text: 'add_task()'
          on_press: app.add_task()
          on_release: app.model.add_task()

        MyButton:
          text: 'del_task()'
          on_release: app.model.del_task()
    MyFooter:
      font_size: 16
      text: "PittodoMain"
